= simple_form_for(@message, :defaults => {:input_html => {:class => 'input-xxlarge'}}, :html => {:class => 'form-horizontal' }) do |f|
  = f.error_notification

  .form-inputs
    = f.input :content, :required => true, :autofocus => true
    .hidden
      = f.association :topic

  .form-actions
    = f.button :submit
