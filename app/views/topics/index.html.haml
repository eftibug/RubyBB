    %th
    %th
    %th

  - @topics.each do |topic|
    %tr
      %td= topic.name
      %td= topic.user
      %td= topic.forum
      %td= topic.messages_count
      %td= link_to 'Show', topic
      %td= link_to 'Edit', edit_topic_path(topic)
