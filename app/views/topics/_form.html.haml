= simple_form_for(@topic, :defaults => {:input_html => {:class => 'input-xxlarge'}}, :html => {:class => 'form-horizontal' }) do |f|
  = f.error_notification

  .form-inputs
    = f.input :name, :required => true
    - if @topic.new_record?
      = f.simple_fields_for :messages do |m|
        = m.input :content
    - if @topic.new_record?
      .hidden= f.association :forum
    - else
      = f.association :forum

  .form-actions
    = f.button :submit
    = link_to 'Destroy', @topic, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' } unless @topic.new_record?
    = link_to 'Back', topic_path(@topic), :class => 'btn btn-link' unless @topic.new_record?
