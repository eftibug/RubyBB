= simple_form_for(@forum, :defaults => {:input_html => {:class => 'input-xxlarge'}}, :html => {:class => 'form-horizontal' }) do |f|
  = f.error_notification

  .form-inputs
    = f.input :name, :required => true, :autofocus => true
    = f.input :content

  .form-actions
    = f.button :submit
    = link_to 'Destroy', @forum, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' } unless @forum.new_record?
    = link_to 'Back', forums_path, :class => 'btn btn-link'
