%h2
  My profile
= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => 'form-horizontal', :method => :put }) do |f|
  = f.error_notification
  .form-inputs
    = f.input :name, :required => true
    = f.input :email, :required => true, :autofocus => true
    = f.input :current_password, :hint => "we need your current password to confirm your changes", :required => true
    = f.input :location
    = f.input :website, :as => :url
    = f.input :birthdate, :start_year => Date.today.year - 100, :end_year => Date.today.year
    = f.input :gender, :collection => %w[male female other]
    = f.input :password, :label => "New password", :autocomplete => "off", :hint => "leave it blank if you don't want to change it", :required => false
    = f.input :password_confirmation, :required => false
  .form-actions
    = f.button :submit, "Update"
%h3 Cancel my account
%p
  Unhappy? #{link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete}.
= link_to "Back", :back
