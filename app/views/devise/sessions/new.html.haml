%h2= t('.sign_in')
= simple_form_for(resource, :as => resource_name, :html => {:class => 'form-horizontal'}, :url => session_path(resource_name)) do |f|
  .form-inputs
    = f.input :email, :as => :string, :label => t('.email_or_name'), :required => false, :autofocus => true
    = f.input :password, :required => false
    = f.input :remember_me, :as => :boolean if devise_mapping.rememberable?
  .form-actions
    = f.button :submit, t('.sign_in')
= render "devise/shared/links"
